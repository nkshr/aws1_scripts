#!/bin/sh

ctrl=n
nmea=n

for arg in $*
do
    case $arg in
	"ctrl") ctrl=y;;
	"nmea") nmea=y;;
    esac
done

if [ $ctrl = y ]; then
    ./aws1_ctrl.aws
fi

if [ $nmea = y ]; then
    ./aws1_nmea.aws gff ais ap gps
fi

# Channel sharing
filter ch_share share -i state aws1_ctrl_out ais_obj -o aws1_ctrl_ui aws1_ctrl_ap1
fset share port 20100
fset share verb n

# time sync (server)
filter tsync tsync -i -o
fset tsync port 20200

go
